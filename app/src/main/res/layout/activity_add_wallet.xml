<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".views.AddWalletActivity">

    <EditText
        android:id="@+id/edit_text_wallet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_wallet_name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_text_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_starting_balance"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edit_text_monthly_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_monthly_budget"
        android:inputType="number"/>

</LinearLayout>